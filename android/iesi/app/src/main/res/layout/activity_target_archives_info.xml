<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/top_title_bar"/>

    <ImageView
        android:id="@+id/head_pic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:background="@drawable/bg_edf2fb_76"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF13152D"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_case_num"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="案件号："
        android:textColor="#FF767A8C"
        android:textSize="13sp"
        />

    <View
        android:layout_width="match_parent"
        android:background="#EDF2FB"
        android:layout_marginTop="17dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="84dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="曾用名"
            android:textColor="#FF767A8C"
            android:textSize="14sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_old_name"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#FF43454F"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#EDF2FB"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="84dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="昵称"
            android:textColor="#FF767A8C"
            android:textSize="14sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#FF43454F"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#EDF2FB"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="84dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="手机号"
            android:textColor="#FF767A8C"
            android:textSize="14sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#FF43454F"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#EDF2FB"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="84dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="驾驶证号"
            android:textColor="#FF767A8C"
            android:textSize="14sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_license_num"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#FF43454F"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#EDF2FB"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="84dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="过往上案情况"
            android:textColor="#FF767A8C"
            android:textSize="14sp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_before_case"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:lineSpacingExtra="2.5dp"
            android:textColor="#FF43454F"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>