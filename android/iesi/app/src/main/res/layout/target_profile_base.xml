<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/target_linear"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:clickable="true"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/target_photo"
        style="@style/style_rv_iv"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/target_name"
            style="@style/style_rv_tv_name" />
        <TextView
            android:id="@+id/target_case"
            style="@style/style_rv_tv_more"
            android:text="案件号: 001"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/target_detail"
        style="@style/style_rv_iv_more"
        android:src="@drawable/right_arrow"
        android:background="#000000"/>
</LinearLayout>