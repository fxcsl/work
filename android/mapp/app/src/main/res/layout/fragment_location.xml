<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:scrollbarSize="3.0dip"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/public_block"
        >
        <LinearLayout android:orientation="horizontal" style="@style/monitor_header_text">
            <TextView android:text="@string/data" style="@style/monitor_header_text_plain" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@id/rv_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/battery_title"
            >
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:id="@id/tv_location"
            android:layout_width="fill_parent"
            android:text="@string/location"
            android:layout_marginBottom="10dip"
            style="@style/style_tv_about" />

    </LinearLayout>

    </LinearLayout>
</ScrollView>